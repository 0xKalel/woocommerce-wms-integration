# WordPress-WMS Integration Environment
# Clean configuration for Docker setup

# Optional: ngrok token for webhook testing
# NGROK_AUTHTOKEN=your_token_here

# WordPress Settings
WP_ADMIN_USER=
WP_ADMIN_EMAIL=
WP_ADMIN_PASSWORD=

# Database Settings
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=
MYSQL_USER=
MYSQL_PASSWORD=

# Optional Services
NGROK_AUTHTOKEN=
# Get your token from: https://dashboard.ngrok.com/get-started/your-authtoken

# Development Settings
WP_DEBUG=
WP_DEBUG_LOG=
WP_DEBUG_DISPLAY=

# Disable WordPress built-in cron (we use external cron service)
DISABLE_WP_CRON=

# Optional WMS Integration Settings
# If provided, these will be pre-filled in the plugin during setup
WMS_USERNAME=
WMS_PASSWORD=
WMS_CUSTOMER_ID=
WMS_CODE=
WMS_API_URL=
NGROK_URL=
